@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/_Layout2.cshtml";
}
@* thong tin gio hàng *@

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header" style="text-align:center;">
                <h4>GIỎ HÀNG</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="search" />
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                Ảnh
                            </th>
                            <th>
                                Tên sản phẩm

                            </th>
                            <th>
                                Màu sắc
                            </th>
                            <th>
                                Xuất xứ
                            </th>
                            <th>
                                Đơn giá
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Thành tiền
                            </th>
                            <th>Xóa</th>
                        </tr>
                    </thead>

                    <tbody id="tbData"></tbody>
                </table>


            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12 p-1">
                <div class="input-group">
                    <input type="text" class="form-control" id="name" placeholder="Họ tên người nhận" />
                </div>
            </div>
            <div class="col-md-12 p-1">
                <div class="input-group">
                    <input type="text" class="form-control" id="sdt" placeholder="Số điện thoại người nhận" />
                </div>
            </div>
            <div class="col-md-12 p-1">
                <div class="input-group">
                    <input type="text" class="form-control" id="address" placeholder="Địa chỉ người nhận" />
                </div>
            </div>


        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="button" id="order" class="btn btn-primary" >Thêm mới</button>
     
    </div>
</div>


@section scripts{
    <script>


        var cart = {
            init: function () {
                cart.search(1);
                $("#search").change(function () {
                    cart.search(1);
                });
                $("#order").click(function () {
                    cart.order();
                });

            },
            search: function () {
                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,

                    url: '/Client/trangchu/MyCart/',
                    success: function (res) {
                        $("#tbData").html(res.data);

                    },
                });
            },
            order: function () {
                var name = $("#name").val();
                var sdt = $("#sdt").val();
                var address = $("#address").val();
                var form = new FormData()
                form.append("name", name);
                form.append("sdt", sdt);
                form.append("address", address);
                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,
                    data: form,
                    url: '/Client/trangchu/Order/',
                    success: function (res) {
                        _layout.showtoast(res.mess);
                    },
                });
            }

        }
        cart.init();

    </script>
}